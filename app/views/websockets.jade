extends base

block title
	| Web Socket

block h2
	| Web Socket
	i example

block content
	h1 Welcome to chat-room: #{name}
	div(data-token= "#{token}")#chat
		ul#log
		input(style="width:80%;")#msg
		button.shiny-blue#send SEND!
	style
		#log{
			list-style: none;
			background: #FFDB4C;
			color: #3779AF;
			border-radius: 10px;
		}
		#log li {
			margin-left: 0;
			color: #333;
		}
		#log li span {
			color: #3779AF;
		}
		}
		#msg {
			width: 80%;
		}
		#send {
			width: 10%;
		}

block append scripts
	script(src="/static/js/lib/socket.js")
	script
		window.chatClient($("#chat").attr("data-token"), "#{uid}");